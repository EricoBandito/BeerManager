<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_delete_verification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="@string/str_delete_verification"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/beer_remaining_warning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="placeholder"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/txt_delete_verification"
        app:layout_constraintStart_toStartOf="@+id/txt_delete_verification"
        app:layout_constraintTop_toBottomOf="@+id/txt_delete_verification" />


</androidx.constraintlayout.widget.ConstraintLayout>